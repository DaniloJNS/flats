    <div>
        <h1>
            <%= @property.title%>
        </h1>
        <h2>
            <%=@property.description%>
        </h2>
        <dl>
            <dt>Quartos: </dt>
            <dd><%=@property.rooms%></dd>

            <dt>Banheiros:</dt>
            <dd><%=@property.bathrooms%></dd>

            <dt>Aceita Pets:</dt>
            <dd><%= @property.pets? ? "Sim" : "Não"%></dd>

            <dt>Estacionamento: </dt>
            <dd><%=@property.parking_slot == true ? "Sim" : "Não"%></dd>

            <dt>Diária: </dt>
            <dd><%= number_to_currency @property.daily_rate, unit: "R$", separator: ",", format: "%u %n"%></dd>

            <dt>Tipo: </dt>
            <dd><%= @property.property_type.name %></dd>
        </dl>
    </div>
    <p><%= link_to "Voltar", root_path%></p>
