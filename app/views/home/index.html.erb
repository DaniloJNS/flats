<header>
  <h1>Flats</h1>
  <h2>Boas vindas ao sistema de locação de apartamentos</h3>
    <nav>
      <%= link_to 'Cadastrar Imóvel', new_property_path%>
    </nav>
    <nav>
      <%= link_to "Cadastrar Tipo de Imóvel", new_property_type_path %>
    </nav>
    <nav>
      <%= link_to "Cadastrar Nova Localização", new_property_location_path %>
    </nav>
</header>

<aside>
  <h2 class="filter">Filtrar por tipo:</h2>
    <% @property_types.each do |pt| %>
      <nav>
        <%= link_to pt.name, property_type_path(pt.id) %>
      </nav>
      <% end %>
</aside>
<aside>
  <h2 class="filter"> Filtrar por região:</h2>
    <% @property_locations.each do |pl| %>
      <nav>
        <%= link_to pl.name, property_location_path(pl.id) %>
      </nav>
      <% end %>
</aside>
<section>
  <h2>Imoveis Disponíveis</h2>
  <% if @property.empty? %>
    <div><span>Nenhum imóvel disponível</span></div>
  <% end %>
  <%@property.each do |p|%>
    <div>
      <%=content_tag :h3, link_to(p.title, property_path(p))%>
      <%=content_tag :p, p.description%>
      <%=content_tag :p, "Quartos: "+ p.rooms.to_s%>
    </div>
  <% end %>

  
</section>
